// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Products {
  id          String       @id @default(uuid())
  name        String
  brand       String
  category    String
  price       Decimal
  image       String
  stock_price Decimal
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  Cart        Cart[]
  OrderItems  OrderItems[]
}

model Cart {
  id         String   @id @default(uuid())
  cookie_id  String
  product    Products @relation(fields: [product_id], references: [id])
  product_id String
  quantity   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([product_id], name: "productIdIndex")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  password  String
  cookie_id String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Addresses Addresses[]
  Order     Orders[]
}

model Addresses {
  id        String   @id @default(uuid())
  address   String
  city      String
  state     String
  postal    String
  phone     String
  user      User     @relation(fields: [user_id], references: [id])
  user_id   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([user_id], name: "userIdIndex")
}

model OrderItems {
  id         String   @id @default(uuid())
  order      Orders   @relation(fields: [order_id], references: [id])
  order_id   String
  product    Products @relation(fields: [product_id], references: [id])
  product_id String
  quantity   Int
  price      Decimal
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([order_id])
  @@index([product_id])
}

model Orders {
  id         String       @id @default(uuid())
  user       User         @relation(fields: [user_id], references: [id])
  user_id    String
  address    String
  total      Decimal
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  OrderItems OrderItems[]

  @@index([user_id])
}
