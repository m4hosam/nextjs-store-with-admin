// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Products {
  id          String   @id @default(uuid())
  name        String
  brand       String
  category    String
  price       Decimal
  image       String
  stock_price Decimal
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Cart        Cart[]
}

model Cart {
  id         String   @id @default(uuid())
  cookie_id  String
  product    Products @relation(fields: [product_id], references: [id])
  product_id String
  quantity   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([product_id], name: "productIdIndex")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  password  String
  cookie_id String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Addresses Addresses[]
}

model Addresses {
  id        String   @id @default(uuid())
  address   String
  city      String
  state     String
  postal    String
  phone     String
  user_id   String
  user      User     @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([user_id], name: "userIdIndex")
}
