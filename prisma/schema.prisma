generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Products {
  id          String   @id @default(uuid())
  name        String
  brand       String
  category    String
  price       Decimal
  image       String
  stock_price Decimal
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

